{
  "compileOnSave": true,
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target":"es2017",
    
    "outDir": "dist",
    "baseUrl": ".",
    "types":["node"],
    "typeRoots":["node_modules/@types", "src/types"],
    
    "declaration": true,
    "esModuleInterop":true,
    "sourceMap": true,
    
    "strict": false,

    "noImplicitAny": false,
    "strictNullChecks": true, 
    "strictFunctionTypes": true, 
    "strictPropertyInitialization": true, 
    "noImplicitThis": true,
    "alwaysStrict": true 

  },
  
  "include": [
    "src/**/*.ts",
    "test/**/*.ts"
  ],
  "exclude":[
    "**/node_modules/**"
  ]

}
